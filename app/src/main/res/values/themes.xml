<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Prayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2B9E8C</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="m">@color/black</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="menuItem" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="tabRippleColor">@color/black</item>
        <item name="android:layout_weight">250</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title" parent="android:Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="appbar" parent="android:Widget.Button.Toggle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textcolor" parent="android:Widget.Button.Toggle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textcolors" parent="android:Widget.Button.Toggle">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>