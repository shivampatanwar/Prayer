<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GaneshFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color"
            android:gravity="center"
            android:textAppearance="@style/textcolor"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/ganeshmantra"
            android:textSize="19sp" />
         <TextView
            android:id="@+id/textView1a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="30dp"
            android:textAppearance="@style/textcolor"
            android:text="@string/गणेशमंत्र"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color"
            android:gravity="center"
            android:paddingTop="4dp"
            android:textAppearance="@style/textcolor"
            android:paddingBottom="4dp"
            android:text="@string/sankatnashanमहागणपति"
            android:textSize="19sp" />
        <TextView
            android:id="@+id/textView2a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="30dp"
            android:textAppearance="@style/textcolor"
            android:text="@string/संकटनाशन_गणेश_स्तोत्र"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color"
            android:gravity="center"
            android:paddingTop="4dp"
            android:textAppearance="@style/textcolor"
            android:paddingBottom="4dp"
            android:text="@string/kkkk"
            android:textSize="19sp" />
        <TextView
            android:id="@+id/textView3a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="30dp"
            android:textAppearance="@style/textcolor"
            android:text="@string/ganeshchalisha"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color"
            android:gravity="center"
            android:paddingTop="4dp"
            android:textAppearance="@style/textcolor"
            android:paddingBottom="4dp"
            android:text="@string/aarti"
            android:textSize="19sp" />
        <TextView
            android:id="@+id/textView4a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="30dp"
            android:textAppearance="@style/textcolor"
            android:text="@string/ganeshaarti"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry" />



    </LinearLayout>

</ScrollView>